%html{:dir => "ltr", :lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    / Tell the browser to be responsive to screen width
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title Xtreme Admin Template - The Ultimate Multipurpose admin template

    =stylesheet_link_tag    'company', media: "all", 'data-turbolinks-track': 'reload'
    =javascript_include_tag 'company', 'data-turbolinks-track': 'reload'
  %body
    / ==============================================================
    / Preloader - style you can find in spinners.css
    / ==============================================================
    .preloader
      .lds-ripple
        .lds-pos
        .lds-pos
    / ==============================================================
    / Main wrapper - style you can find in pages.scss
    / ==============================================================
    #main-wrapper{"data-boxed-layout" => "full", "data-header-position" => "absolute", "data-layout" => "vertical", "data-navbarbg" => "skin5", "data-sidebar-position" => "absolute", "data-sidebartype" => "full"}
      / ==============================================================
      / Topbar header - style you can find in pages.scss
      / ==============================================================
      %header.topbar{"data-navbarbg" => "skin5"}
        %nav.navbar.top-navbar.navbar-expand-md.navbar-dark
          .navbar-header{"data-logobg" => "skin5"}
            / ==============================================================
            / Logo
            / ==============================================================
            %a.navbar-brand{:href => "index.html"}
              / Logo icon
              %span.logo-text
                / dark Logo text
                =image_tag("公司logo.png", class: 'dark-logo', :alt => "homepage")
                / Light Logo text
                =image_tag("公司logo.png", class: 'light-logo', :alt => "homepage")
            / ==============================================================
            / End Logo
            / ==============================================================
            / This is for the sidebar toggle which is visible on mobile only
            %a.nav-toggler.waves-effect.waves-light.d-block.d-md-none{:href => "javascript:void(0)"}
              %i.ti-menu.ti-close 侧栏
          / ==============================================================
          / End Logo
          / ==============================================================
          #navbarSupportedContent.navbar-collapse.collapse{"data-navbarbg" => "skin5"}
            / ==============================================================
            / toggle and nav items
            / ==============================================================
            %ul.navbar-nav.float-left.mr-auto
              / ==============================================================
              / Search
              / ==============================================================
              %li.nav-item.search-box
            / ==============================================================
            / Right side toggle and nav items
            / ==============================================================
            %ul.navbar-nav.float-right
              / ==============================================================
              / User profile and search
              / ==============================================================
              %li.nav-item.dropdown
                %a.nav-link.dropdown-toggle.text-muted.waves-effect.waves-dark.pro-pic{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => ""}
                  %img.rounded-circle{:alt => "user", :src => "http://p7.qhimg.com/t01a4b62d3c967c19cb.png", :width => "31"}/
                .dropdown-menu.dropdown-menu-right.user-dd.animated
                  %a.dropdown-item{:href => "javascript:void(0)"}
                    %i.ti-user.m-r-5.m-l-5
                    个人信息
                  %a.dropdown-item{:href => "javascript:void(0)"}
                    %i.ti-wallet.m-r-5.m-l-5
                    退出
                  %a.dropdown-item{:href => "javascript:void(0)"}
                    %i.ti-email.m-r-5.m-l-5
                    待用
              / ==============================================================
              / User profile and search
              / ==============================================================
      / ==============================================================
      / End Topbar header
      / ==============================================================
      / ==============================================================
      / Left Sidebar - style you can find in sidebar.scss
      / ==============================================================
      %aside.left-sidebar{"data-sidebarbg" => "skin6"}
        / Sidebar scroll
        .scroll-sidebar
          / Sidebar navigation
          %nav.sidebar-nav
            %ul#sidebarnav
              / User Profile
              %li
                / User Profile
                .user-profile.d-flex.no-block.dropdown.m-t-20
                  .user-pic
                    %img.rounded-circle{:alt => "users", :src => "http://p7.qhimg.com/t01a4b62d3c967c19cb.png", :width => "40"}/
                  .user-content.hide-menu.m-l-10
                    %a#Userdd{"aria-expanded" => "false", "aria-haspopup" => "true", :href => "javascript:void(0)", :role => "button"}
                      %h5.m-b-0.user-name.font-medium
                        Steave Jobs
                        %i.fa.fa-angle-down
                      %span.op-5.user-email varun@gmail.com
                / End User Profile
              %li.p-15.m-t-10
                %a.btn.btn-block.create-btn.text-white.no-block.d-flex.align-items-center{:href => "javascript:void(0)"}
                  %i.fa.fa-plus-square
                  %span.hide-menu.m-l-5 发布职位
              / User Profile
              %li.sidebar-item
                %a.sidebar-link.waves-effect.waves-dark.sidebar-link{"aria-expanded" => "false", :href => "index.html"}
                  %i.mdi.mdi-view-dashboard
                  %span.hide-menu 企业概览
              %li.sidebar-item
                %a.sidebar-link.waves-effect.waves-dark.sidebar-link{"aria-expanded" => "false", :href => "pages-profile.html"}
                  %i.mdi.mdi-account-network
                  %span.hide-menu 完善企业信息
              %li.sidebar-item
                %a.sidebar-link.waves-effect.waves-dark.sidebar-link{"aria-expanded" => "false", :href => "table-basic.html"}
                  %i.mdi.mdi-border-all
                  %span.hide-menu 已发布职位
              %li.sidebar-item
                %a.sidebar-link.waves-effect.waves-dark.sidebar-link{"aria-expanded" => "false", :href => "icon-material.html"}
                  %i.mdi.mdi-face
                  %span.hide-menu  收到简历
              %li.sidebar-item
                %a.sidebar-link.waves-effect.waves-dark.sidebar-link{"aria-expanded" => "false", :href => "starter-kit.html"}
                  %i.mdi.mdi-file
                  %span.hide-menu 新增管理员
              %li.sidebar-item
                %a.sidebar-link.waves-effect.waves-dark.sidebar-link{"aria-expanded" => "false", :href => "error-404.html"}
                  %i.mdi.mdi-alert-outline
                  %span.hide-menu 404
              %li.text-center.p-40.upgrade-btn
                %a.btn.btn-block.btn-danger.text-white{:href => root_path, :target => "_blank"} 返回网站首页
          / End Sidebar navigation
        / End Sidebar scroll
      / ==============================================================
      / End Left Sidebar - style you can find in sidebar.scss
      / ==============================================================
      / ==============================================================
      / Page wrapper
      / ==============================================================
      .page-wrapper
        / ==============================================================
        / Bread crumb and right sidebar toggle
        / ==============================================================
        .page-breadcrumb
          .row.align-items-center
            .col-5
              %h4.page-title Dashboard
              .d-flex.align-items-center
                %nav{"aria-label" => "breadcrumb"}
                  %ol.breadcrumb
                    %li.breadcrumb-item
                      %a{:href => "#"} Home
                    %li.breadcrumb-item.active{"aria-current" => "page"} Library
            / .col-7
            /   .text-right.upgrade-btn
            /     %a.btn.btn-danger.text-white{:href => "https://wrappixel.com/templates/xtremeadmin/", :target => "_blank"} Upgrade to Pro
        .container-fluid
          待完成内容
          =yield
        / ==============================================================
        / End Container fluid
        / ==============================================================
        / ==============================================================
        / footer
        / ==============================================================
        %footer.footer.text-center
          所有版权归 dongmingyan 所有
    


    