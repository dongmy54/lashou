%style
  :plain
    .company-content-item {
      margin-bottom: 20px;
      font-size: 15px;
      font-weight: 300;
      text-align: left;
    }

    .company-content-item .company-content-title {
      font-weight: 400;
    }

    .company-content-item .company-content-info {
      margin-left: 10px;
    }

.container-fluid
  .profile
    .col-md-4.col-md-offset-4
      .profile-content
        .text-center
          .row
            .col-lg-12.col-md-12.col-sm-12
              .service-heading-block
                %h3.text-center.text-primary.title 公司审核概览
          .resume-divide-line{style: "padding-bottom: 0"}
          .company-content{style: 'margin: 20px 20px;'}
            .company-content-item
              %span.company-content-title
                公司名称:
              %span.company-content-info
                =@company.name
            .company-content-item
              %span.company-content-title
                公司规模:
              %span.company-content-info
                =@company.scale
            .company-content-item
              %span.company-content-title
                所属行业:
              %span.company-content-info
                =@company.industry.name
            .company-content-item
              %span.company-content-title
                审核状态:
              %span.company-content-info
                =@company.status
            .company-content-item
              %span.company-content-title
                审核信息:
              %span.company-content-info
                =@company.audit_comment || '无'




